//factorial without recursion

#include <stdio.h>
int main() 
{
int n, i;
    int fact=1;
printf("Enter a positive integer: ");
    scanf("%d", &n);

    if (n < 0) 
	{
        printf("Error: Factorial is not defined for negative numbers.\n");
        return 0;
    }

    for (i = 1; i <= n; ++i) 
	{
        fact *= i;
    }

    printf("Factorial of %d = %llu\n", n, fact);

    return 0;
}

